<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
		<RootNamespace>net.vieapps.Components.Utility</RootNamespace>
		<WarningLevel>3</WarningLevel>
		<DocumentationFile>bin\$(Configuration)\$(TargetFramework)\VIEApps.Components.Utility.AssemblyLoader.xml</DocumentationFile>
		<AssemblyName>VIEApps.Components.Utility.AssemblyLoader</AssemblyName>
		<AssemblyTitle>VIEApps NGX Assembly Loader Utility</AssemblyTitle>
		<SignAssembly>false</SignAssembly>
		<AssemblyOriginatorKeyFile>../VIEApps.Components.snk</AssemblyOriginatorKeyFile>
		<AssemblyVersion>10.3.1906.4</AssemblyVersion>
		<FileVersion>10.3.1906.4</FileVersion>
		<InformationalVersion>v10.3+rev:2019.06.20-multiple.targets</InformationalVersion>
		<Product>VIEApps NGX</Product>
		<Company>VIEApps.net</Company>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<PackageId>VIEApps.Components.Utility.AssemblyLoader</PackageId>
		<Version>10.3.1906.4-preview</Version>
		<Title>VIEApps NGX Assembly Loader Utility</Title>
		<Description>The library for dynamic loading an assembly in .NET apps</Description>
		<Authors>VIEApps.net</Authors>
		<Copyright>© 2019 VIEApps.net</Copyright>
		<PackageLicense>LICENSE.md</PackageLicense>
		<PackageOutputPath>..\</PackageOutputPath>
		<PackageTags>utility;extensions;vieapps;vieapps.components</PackageTags>
		<PackageReleaseNotes>Experimental with preview packages</PackageReleaseNotes>
		<PackageProjectUrl>https://vieapps.net/</PackageProjectUrl>
		<PackageIconUrl>https://github.com/vieapps/Components.Utility/raw/master/logo.png</PackageIconUrl>
		<RepositoryUrl>https://github.com/vieapps/Components.Utility.AssemblyLoader</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<None Remove=".DS_Store" />
		<None Remove=".gitattributes" />
		<None Remove=".gitignore" />
		<None Remove="LICENSE.md" />
		<None Remove="README.md" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="System.Runtime.Loader" Version="4.3.0" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
		<PackageReference Include="Microsoft.Extensions.DependencyModel" Version="2.1.0" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' != 'netstandard2.0'">
		<PackageReference Include="Microsoft.Extensions.DependencyModel" Version="3.0.0-preview6-27804-01" />
	</ItemGroup>

</Project>